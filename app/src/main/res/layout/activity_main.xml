<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_content"
        android:visibility="invisible">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_password"
            android:layout_alignEnd="@+id/bt_register"
            android:layout_alignLeft="@+id/et_password"
            android:layout_alignRight="@+id/bt_register"
            android:layout_alignStart="@+id/et_password"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/bt_register"
            android:layout_alignLeft="@+id/bt_register"
            android:layout_alignRight="@+id/bt_register"
            android:layout_alignStart="@+id/bt_register"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="@string/buttonLoginLabel" />

        <Button
            android:id="@+id/bt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_login"
            android:layout_centerHorizontal="true"
            android:text="@string/buttonRegisterLabel" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/octopus" />
</FrameLayout>